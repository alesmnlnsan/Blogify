<%- include ('./partials/header') %>

    <!-- <h2 class="center-text">Blog Post</h2> -->

    <div class="row-header">
        <h2 class="center-text">
            <%= post.title %>
        </h2>

        <span class="posted_at">
            <%= format(new Date(post.publication_date),'dd MMM yyyy') %>
        </span>
    </div>
    <div class="blog-content">
        <!-- <h2>
            <%= post.author_id %>
                <span class="updated_at">
                    <%= format(new Date(post.updated_date),'dd MMM yyyy') %>
                </span>
        </h2> -->

        <img src="<%= post.image_url %>" class="blog_image" alt="" />

        <p class="description">
            <%= post.content %>
        </p>
        <h3>Comments</h3>
        <% comments.forEach((comment) => { %>
            <strong><%= comment.username %>:</strong> <%= comment.comment_text %>
        <% }) %>
        
        <h3>Leave a Comment:</h3>
        <% if (user) { %>
            <form action="/comment" method="POST">
                <textarea name="content" placeholder="Your comment"></textarea>
                <p class="date">
                    <%= format(new Date(comment.comment_date),'dd MMM yyyy hh:mm a') %>
                </p>
                <input type="hidden" name="postId" value="<%= post.post_id %>">
                <button type="submit">Add Comment</button>
            </form>
        <% } else { %>
            <p>You must be logged in to leave a comment.</p>
        <% } %>
        