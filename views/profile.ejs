<h2>User Profile</h2>
<%= user.image_url %>

<div>
  <p><strong>Name:</strong> <%= user.username %></p>
  <p><strong>Email:</strong> <%= user.email %></p>
  <p><strong>Pronouns:</strong> <%= user.pronouns %></p>

</div>

<h2>Blog Posts</h2>
  <ul>
    <% posts.forEach((post) => { %>
      <li>
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <p><strong>Publication Date:</strong> <%= post.publication_date %></p>
        <a href="/edit/<%= post.id %>">Edit</a>
        <a href="/delete/<%= post.id %>">Delete</a>
      </li>
    <% }) %>
  </ul>

<a href="/posts/create">Create a new post</a>